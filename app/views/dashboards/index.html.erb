<header class="content__title">
  <h1>Dashboard</h1>

  <div class="actions">
    <a href="" class="actions__item zmdi zmdi-trending-up"></a>
    <a href="" class="actions__item zmdi zmdi-check-all"></a>

    <div class="dropdown actions__item">
      <i data-toggle="dropdown" class="zmdi zmdi-more-vert"></i>
      <div class="dropdown-menu dropdown-menu-right">
        <a href="" class="dropdown-item">Refresh</a>
        <a href="" class="dropdown-item">Manage Widgets</a>
        <a href="" class="dropdown-item">Settings</a>
      </div>
    </div>
  </div>
</header>

<div class="row quick-stats">
  <div class="col-sm-6 col-md-3">
    <div class="quick-stats__item bg-blue">
      <div class="quick-stats__info">
        <h2><%= Staff.staff_count %></h2>
        <small>Total Staff</small>
      </div>

      <div class="quick-stats__chart sparkline-bar-stats">6,4,8,6,5,6,7,8,3,5,9,5</div>
    </div>
  </div>

  <div class="col-sm-6 col-md-3">
    <div class="quick-stats__item bg-amber">
      <div class="quick-stats__info">
        <h2><%= Engagement.engagement_count %></h2>
        <small>Total Engagements</small>
      </div>

      <div class="quick-stats__chart sparkline-bar-stats">6,4,8,6,5,6,7,8,3,5,9,5</div>
    </div>
  </div>

  <div class="col-sm-6 col-md-3">
    <div class="quick-stats__item bg-purple">
      <div class="quick-stats__info">
        <h2><%= Engagement.bench_count %></h2>
        <small>Total Bench</small>
      </div>

      <div class="quick-stats__chart sparkline-bar-stats">6,4,8,6,5,6,7,8,3,5,9,5</div>
    </div>
  </div>

  <div class="col-sm-6 col-md-3">
    <div class="quick-stats__item bg-red">
      <div class="quick-stats__info">
        <h2><%= Client.client_count %></h2>
        <small>Total Clients</small>
      </div>

      <div class="quick-stats__chart sparkline-bar-stats">6,4,8,6,5,6,7,8,3,5,9,5</div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 col-md-3">
    <div class="card card--inverse widget-pie">
      <div class="col-6 col-sm-4 col-md-6 col-lg-4 widget-pie__item">
        <div class="easy-pie-chart" data-percent="<%= Engagement.utilisation.round.to_s %>" data-size="80" data-track-color="rgba(0,0,0,0.08)" data-bar-color="#fff">
          <span class="easy-pie-chart__value" style="line-height: 80px; font-size: 20px; color: rgb(255, 255, 255);"><%= Engagement.utilisation.round.to_s %></span>
          <canvas height="80" width="80"></canvas></div>
        <div class="widget-pie__title">Utilisation</div>
      </div>
    </div>
  </div>
</div>