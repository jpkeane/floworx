<% provide(:title, @staff.full_name) %>
<div class="card">
  <div class="card-block">
    <div class="tab-container">
      <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" data-toggle="tab" href="#details" role="tab" aria-expanded="false">Details</a>
        </li>
        <li class="nav-item">
          <a class="nav-link " data-toggle="tab" href="#roles" role="tab" aria-expanded="true">Roles</a>
        </li>
        <li class="nav-item">
          <a class="nav-link " data-toggle="tab" href="#skills" role="tab" aria-expanded="true">Skills</a>
        </li>
      </ul>

      <div class="tab-content">
        <div class="tab-pane fade active show" id="details" role="tabpanel" aria-expanded="false">
          <dl class="row">
            <dt class="col-sm-3">First Name</dt>
            <dd class="col-sm-9"><%= @staff.first_name %></dd>
          </dl>
          <dl class="row">
            <dt class="col-sm-3">Last Name</dt>
            <dd class="col-sm-9"><%= @staff.last_name %></dd>
          </dl>
          <dl class="row">
            <dt class="col-sm-3">Team</dt>
            <dd class="col-sm-9"><%= link_to @staff.team.name, team_path(@staff.team) %></dd>
          </dl>
          <dl class="row">
            <dt class="col-sm-3">Grade</dt>
            <dd class="col-sm-9"><%= link_to @staff.grade.name, grade_path(@staff.grade) %></dd>
          </dl>
        </div>
       <div class="tab-pane fade" id="roles" role="tabpanel" aria-expanded="false">
         <div class="table-responsive">
           <table class="table table-bordered mb-0">
             <thead>
             <tr>
               <th>Name</th>
               <th>Suitability</th>
             </tr>
             </thead>
             <tbody>
             <% @staff.staff_role_suitabilities.each do |srs| %>
               <tr>
                 <th scope="row"><%= link_to srs.role.name, role_path(srs.role) %></th>
                 <td scope="row"><%= suitability(srs.suitability) %></td>
               </tr>
             <% end %>
             </tbody>
           </table>
         </div>
        </div>

        <div class="tab-pane fade" id="skills" role="tabpanel" aria-expanded="false">
          <div class="table-responsive">
            <table class="table table-bordered mb-0">
              <thead>
              <tr>
                <th>Name</th>
                <th>Suitability</th>
              </tr>
              </thead>
              <tbody>
              <% @staff.staff_skill_levels.each do |ssl| %>
                <tr>
                  <th scope="row"><%= link_to ssl.skill.name, skill_path(ssl.skill) %></th>
                  <td scope="row"><%= suitability(ssl.level) %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
